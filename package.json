{
  "name": "demo-achievement-service",
  "version": "1.0.0",
  "repository": "git@github.com:TakahiroIshii/demo-achievement-service.git",
  "author": "Takahiro Ishii <takaishiijp@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "TS_NODE_TRANSPILE_ONLY=1 nodemon -r ts-node/register  src/server.ts | pino-pretty --translateTime",
    "build:service": "rm -rf dist && tsc -p tsconfig.build.json && printf \"%s\" \"$(git log -1 --pretty=%h)\" > ./dist/.hash",
    "test": "npm-run-all -p test:*",
    "test:integration": "TS_NODE_TRANSPILE_ONLY=1 mocha tests --opts ./tests/mocha.opts",
    "test:type": "yarn tsc --noEmit -p tsconfig.build.json",
    "test:lint": "eslint src/**/*.ts",
    "lint-staged": "lint-staged",
    "sqs:init": "aws --endpoint-url=http://localhost:4566 sqs create-queue --queue-name achievementQueue",
    "sqs:testInput": "aws --endpoint-url=http://localhost:4566 sqs send-message  --queue-url http://localhost:4566/000000000000/achievementQueue --message-bod,y file://testInput.jso"
  },
  "dependencies": {
    "aigle": "^1.14.1",
    "aws-sdk": "^2.824.0",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "dynamo-types": "^2.10.1",
    "express": "^4.17.1",
    "ioredis": "^4.19.4",
    "pino": "^6.9.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "tsyringe": "^4.4.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.10",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.20",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.6",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-babel-vue": "^1.0.6",
    "import-sort-style-renke": "^6.0.0",
    "lint-staged": "^10.5.3",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all -p lint-staged test:type test:lint"
    }
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "import-sort --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "import-sort-parser-babel-vue",
      "style": "renke"
    }
  }
}
